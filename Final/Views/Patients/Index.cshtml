@model IEnumerable<Final.Models.Patient>

@{
    ViewData["Title"] = "Patients";
}

<h1>Patients</h1>
<nav>
    @Html.ActionLink("Home", "Index", "Home") |
    @Html.ActionLink("Doctors", "Index", "Doctors") |
    @Html.ActionLink("Patients", "Index", "Patients") |
    @Html.ActionLink("Visits", "Index", "Visits")
</nav>
<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm("Index", "Patients", FormMethod.Get))
{
    <b>Search By:</b>
    @Html.RadioButton("SearchBy", "Name", true)

    <text>Patient Name</text>
    @Html.RadioButton("SearchBy", "Address")

    <text>Patient Address</text>
    <br />

    @Html.TextBox("search")
    <input type="submit" value="Search" />
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddimisionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DischargeDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddimisionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DischargeDate)
            </td>
           <td>

                    @Html.ActionLink(item.Name, "Details", "Doctors", new { id = item.DoctorId }, null)

            </td> 
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
